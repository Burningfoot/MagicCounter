@page "/"
@using Magic_Counter.Models
@using Magic_Counter.ViewModels
@using ReactiveUI.Blazor
@inherits ReactiveInjectableComponentBase<GameViewModel>
<MudGrid Style="height: 100%"
         Class="ma-0 pa-0"
         Spacing="0"
         Justify="Justify.SpaceBetween">
@*     @foreach (var player in @players)
    {
        <PlayerView Player="@player" />
    } *@
    @if (@players.Count() > 0)
    {
        @for (int i = 0; i < @players.Count(); i++)
        {
            if (i < @players.Count()/2)
            {
                <PlayerView Player="@players[i]" Angle="180" />
            }
            else
            {
                <PlayerView Player="@players[i]" Angle="0" />
            }
        }
    }

</MudGrid>



